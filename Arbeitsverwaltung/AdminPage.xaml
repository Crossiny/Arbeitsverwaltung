<Page x:Class="Arbeitsverwaltung.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Arbeitsverwaltung"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AdminPage"
      Background="WhiteSmoke"
      MouseEnter="AdminPage_OnMouseEnter">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Name="UsernameTextBox"/>
        <Button Name="GetUserInfoButton" Grid.Column="1" Content="Get user data"></Button>
        <ListBox Name="UserListBox" Grid.Row="1"/>
        <StackPanel Name="StackPanel" Grid.Row="1" Grid.Column="1"></StackPanel>
    </Grid>
</Page>